{
    "name": "ReadCom2",
    "cuda": true,
    "gpus": [
        3,
        4,
        5,
        6
    ],
    "data_loader": {
        "batch_size": 32,
        "shuffle": true,
        "workers": 0
    },
    "validation": {
        "validation_split": 0.1,
        "shuffle": true
    },
    "lr_scheduler_type": "ExponentialLR",
    "lr_scheduler_freq": 200,
    "lr_scheduler": {
        "gamma": 0.94
    },
    "optimizer_type": "Adam",
    "optimizer": {
        "lr": 0.001,
        "weight_decay": 1e-05
    },
    "loss": "WaterMarkLoss",
    "metrics": [
        "my_metric",
        "my_metric2"
    ],
    "trainer": {
        "epochs": 1000,
        "save_dir": "saved/",
        "save_freq": 1,
        "verbosity": 2,
        "monitor": "val_loss",
        "monitor_mode": "min"
    }
}